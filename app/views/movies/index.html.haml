-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  = form_tag movies_path, :method => :get do
    Include:
    - Movie.allRatings.each do |rating|
      = rating
      = check_box_tag "ratings[#{rating}]"
    = submit_tag 'Refresh'
  %thead
    %tr
      %th{:class => @title_header}
        = link_to 'Movie Titles', movies_path(:title => "sort"), {:id => "title_header"}
      %th Rating
      %th{:class => @release_date_header}
        = link_to 'Release Date', movies_path(:release_date => "sort"), {:id => "release_date_header"} 
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path


